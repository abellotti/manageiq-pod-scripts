if [ "$(minishift-status)" != "Running" ]
then
  echo "Minishift is not running"
else
  if [ -z "$DOCKER_NAMESPACE" ]
  then
    echo "ManageIQ DOCKER_NAMESPACE is not defined"
  elif [ ! -f Dockerfile ]
  then
    echo "Must run where Dockerfile exists"
  else
    NO_CACHE=""
    if [ "${1}" = "-f" -o "${1}" = "--no-cache" ]
    then
      NO_CACHE="--no-cache"
      shift 1
    fi
    LABEL_PREFIX=""
    DOCKERHUB_PUSH="no"
    if [ "${1}" = "-p" ]
    then
      DOCKERHUB_PUSH="yes"
      shift 1
      [[ -n "${1}" ]] && LABEL_PREFIX="${1}-"
    fi
    echo "Building ManageIQ Httpd Auth Config Docker Image for $DOCKER_NAMESPACE ..."
    echo "Push to dockerhub: ${DOCKERHUB_PUSH}"
    oc login $(minishift ip):8443 -u developer -p developer
    TARGET="abellotti/httpd_configmap_generator:${LABEL_PREFIX}latest"
    docker build ${NO_CACHE} . -t $TARGET
    if [ $? -eq 0 -a $DOCKERHUB_PUSH="yes" ]
    then
      echo "Pushing to dockerhub @ $TARGET"
      docker push $TARGET
    fi
  fi
fi
